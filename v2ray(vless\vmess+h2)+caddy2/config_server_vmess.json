{
  "log": {
    "error": "/var/log/v2ray/error.log",
    "access": "/var/log/v2ray/access.log",
    "loglevel": "info"
  },
  "inbounds": [
    {
      "port": 2002, //监听端口，此端口收发web代理服务器(如caddy2、nginx等）转来的v2ray数据流。
      "listen": "127.0.0.1", //只监听本机，避免除本机外的机器探测到上面监听端口。
      "protocol": "vmess",
      "settings": {
        "clients": [
          {
            "email": "2002@gmail.com",
            "id": "048e0bf2-dd56-11e9-aa37-5600024c1d6a", //修改成自己的UUID
            "alterId": 0 //为0启用VMessAEAD，大于0关闭VMessAEAD。
          }
        ],
        "disableInsecureEncryption": true
      },
      "streamSettings": {
        "security": "none",
        "network": "h2",
        "httpSettings": {
          "host": [
            "xx.yy" //修改成自己的域名
          ],
          "path": "/SeuW56Es" //修改成自己的path
        }
      },
      "sniffing": {
        "enabled": true,
        "destOverride": [
          "http",
          "tls"
        ]
      }
    },
  ],
  "outbounds": [
    {
      "tag": "direct",
      "protocol": "freedom",
      "settings": {}
    },
    {
      "tag": "blocked",
      "protocol": "blackhole",
      "settings": {}
    }
  ],
  "routing": {
    "domainStrategy": "AsIs",
    "rules": [
      {
        "type": "field",
        "protocol": [
          "bittorrent"
        ],
        "outboundTag": "blocked"
      }
    ]
  }
}
