{
  "log": {
    "error": "/var/log/v2ray/error.log",
    "access": "/var/log/v2ray/access.log",
    "loglevel": "info"
  },
  "inbounds": [
    {
      "port": 443, //监听端口
      "protocol": "vless",
      "settings": {
        "clients": [
          {
            "email": "443@gmail.com",
            "id": "888fd3ac-dd53-11e9-b357-5600024c1d6a" //修改成自己的UUID
          }
        ],
        "decryption": "none",
        "fallbacks": [
          {
            "dest": "/dev/shm/h1.web", //http/1.1回落进程
            "xver": 1 //nginx 支持 PROXY protocol，开启传递请求的真实来源 IP 和端口给nginx。
          },
          {
            "alpn": "h2", //h2回落匹配 
            "dest": "/dev/shm/h2.web", //h2回落进程
            "xver": 1 //nginx 支持 PROXY protocol，开启传递请求的真实来源 IP 和端口给nginx。
          },
          {
            "path": "/HALdGZ9k", //通过路径分流出ws
            "dest": 2001, //分流后转发到2001端口
            "xver": 0
          }
        ]
      },
      "streamSettings": {
        "security": "tls",
        "tlsSettings": {
          "alpn":[
            "h2", //启用h2连接，web回落也必须支持h2回落。
            "http/1.1" //启用http/1.1连接，web回落也必须支持http/1.1回落。
          ],
          "certificates": [
            {
              "certificateFile": "/etc/ssl/tls/xx.yy.crt", // 换成你的证书，绝对路径。
              "keyFile": "/etc/ssl/tls/xx.yy.key" // 换成你的私钥，绝对路径。
            }
          ]
        },
        "network": "tcp"
      },
      "sniffing": {
        "enabled": true,
        "destOverride": [
          "http",
          "tls"
        ]
      }
    },
    {
      "port": 2001, //监听端口
      "listen": "127.0.0.1", //只监听本机，避免除本机外的机器探测到上面监听端口。
      "protocol": "vless",
      "settings": {
        "clients": [
          {
            "email": "2001@gmail.com",
            "id": "048e0bf2-dd56-11e9-aa37-5600024c1d6a" //修改成自己的UUID
          }
        ],
        "decryption": "none"
      },
      "streamSettings": {
        "security": "none",
        "network": "ws",
        "wsSettings": {
          "path": "/HALdGZ9k" //修改成自己的path
        }
      },
      "sniffing": {
        "enabled": true,
        "destOverride": [
          "http",
          "tls"
        ]
      }
    }
  ],
  "outbounds": [
    {
      "tag": "direct",
      "protocol": "freedom",
      "settings": {}
    },
    {
      "tag": "blocked",
      "protocol": "blackhole",
      "settings": {}
    }
  ],
  "routing": {
    "domainStrategy": "AsIs",
    "rules": [
      {
        "type": "field",
        "protocol": [
          "bittorrent"
        ],
        "outboundTag": "blocked"
      }
    ]
  }
}
