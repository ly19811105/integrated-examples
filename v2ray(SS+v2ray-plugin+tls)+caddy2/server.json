{
  "log": {
    "error": "/var/log/v2ray/error.log",
    "access": "/var/log/v2ray/access.log",
    "loglevel": "info"
  },
  "inbounds": [
    {
      "tag": "ss1ws", //标签，与routing中标签对应。
      "port": "2004", //监听端口，此端口收发web代理服务器(如caddy2、nginx等）转来的v2ray数据流。
      "listen": "127.0.0.1", //只监听本机，避免除本机外的机器探测到上面监听端口。
      "protocol": "dokodemo-door",
      "settings": {
        "address": "v1.mux.cool",
        "network": "tcp",
        "followRedirect": false
      },
      "streamSettings": {
        "security": "none",
        "network": "ws",
        "wsSettings": {
          "path": "/SS1v2ray" //修改成自己的path
        }
      }
    },
    {
      "port": 2005,
      "protocol": "shadowsocks",
      "settings": {
        "email": "2005@gmail.com",
        "method": "chacha20-poly1305",
        "password": "diy9125", //修改成自己的密码
        "ota": false,
        "network": "tcp,udp"
      },
      "streamSettings": {
        "security": "none",
        "network": "domainsocket",
        "dsSettings": {
          "path": "/var/run/ss1-loop.sock" //与outbounds中对应
        }
      },
      "sniffing": {
        "enabled": true,
        "destOverride": [
          "http",
          "tls"
        ]
      }
    }
  ],
  "outbounds": [
    {
      "tag": "direct",
      "protocol": "freedom",
      "settings": {}
    },
    {
      "tag": "ss1mux", //标签，与routing中标签对应。
      "protocol": "freedom",
      "streamSettings": {
        "network": "domainsocket",
        "dsSettings": {
          "path": "/var/run/ss1-loop.sock" //与streamSettings中对应
        }
      }
    },
    {
      "tag": "blocked",
      "protocol": "blackhole",
      "settings": {}
    }
  ],
  "routing": {
    "domainStrategy": "AsIs",
    "rules": [
      {
        "type": "field",
        "inboundTag": [
          "ss1ws" //与inbounds中标签对应
        ],
        "outboundTag": "ss1mux" //与outbounds中标签对应
      },
      {
        "type": "field",
        "protocol": [
          "bittorrent"
        ],
        "outboundTag": "blocked"
      }
    ]
  }
}
